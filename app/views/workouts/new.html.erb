<h1>New Workout</h1>

  <%= form_for @workout do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :date %><br />
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>

  <%= f.hidden_field :user_id, :value => @user.id %>

  <p class="button"><%= f.submit "Submit" %></p>

<% end %>
